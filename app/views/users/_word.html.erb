<div class="content_post">
  <div class="more">
    <span><%= image_tag 'down.png' %></span>
    <ul class="more_list">
      <li>
        <%= link_to '編集', edit_word_path(word.id) %>
      </li>
      <li>
        <%= link_to '削除', word_path(word.id), method: :delete, data: { confirm: 'この単語を削除しますか？' }  %>
      </li>
    </ul>
  </div>
  <p class="korean-word"><%= word.korean %></p>
  <p class="japanese-word" style="display: none;"><%= word.japanese %></p>
</div>

